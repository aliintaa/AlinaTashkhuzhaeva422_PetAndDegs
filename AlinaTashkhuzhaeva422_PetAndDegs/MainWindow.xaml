<Window x:Class="AlinaTashkhuzhaeva422_PetAndDegs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AlinaTashkhuzhaeva422_PetAndDegs"
        mc:Ignorable="d"
        Title="CetAndDog" Height="450" Width="800">
    <Grid>
        <StackPanel x:Name="LoginPanel" Visibility="Visible">
            <TextBlock Text="Введите имя:" Margin="10"/>
            <TextBox x:Name="UsernameTextBox" Margin="10"/>
            <Button Content="Войти" Click="LoginButton_Click" Margin="10"/>
        </StackPanel>

        <StackPanel x:Name="InfoPanel" Visibility="Collapsed">
            <TextBlock x:Name="PetInfoTextBlock" Margin="10"/>
            <Button Content="Добавить питомца" Click="AddPetButton_Click" Margin="10"/>
            <TextBox x:Name="SearchTextBox" Margin="10"/>
            <Button Content="Поиск" Click="SearchButton_Click" Margin="10"/>
            <ListBox x:Name="PetsListBox" Margin="10"/>
        </StackPanel>

        <StackPanel x:Name="AddPetPanel" Visibility="Collapsed">
            <ComboBox x:Name="PetComboBox" Margin="10">
                <ComboBoxItem Content="Ра"/>
                <ComboBoxItem Content="Нуби"/>
            </ComboBox>
            <TextBox x:Name="DescriptionTextBox" Margin="10" />
            <Button Content="Добавить фотографию" Click="AddPhotoButton_Click" Margin="10"/>
            <Button Content="Сохранить" Click="SavePetButton_Click" Margin="10"/>
            <Image x:Name="PetImage" Width="100" Height="100" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
