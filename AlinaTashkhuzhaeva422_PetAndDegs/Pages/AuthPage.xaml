<Page x:Class="AlinaTashkhuzhaeva422_PetAndDegs.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AlinaTashkhuzhaeva422_PetAndDegs.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage">


    <Grid Background="#FFEFEFEF">
        <Label Content="Страница авторизации" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Grid.ColumnSpan="2" Margin="0,0,0,20" Foreground="#333333"/>
        <StackPanel x:Name="LoginPanel" Visibility="Visible">
            <TextBlock   FontWeight="Bold" FontSize="20" Text="Введите имя:" Margin="10"/>
            <TextBox Height="50" x:Name="UsernameTextBox" Margin="10"/>
            <Button   FontWeight="Bold" FontSize="20" Background="Coral" Foreground="black" Height="50" Content="Войти" Click="LoginButton_Click" Margin="10"/>
        </StackPanel>
    </Grid>
</Page>
